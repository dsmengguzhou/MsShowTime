<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_window_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Window Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start ProgressBar Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_copy_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Copy Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_wx_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"/>

</LinearLayout>