<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_window_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Window Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start ProgressBar Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_copy_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Copy Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_wx_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信5.2.1" />

    <Button
        android:id="@+id/btn_wx_activity_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信6.0" />

    <Button
        android:id="@+id/btn_start_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始三角形动画" />
    

</LinearLayout>