<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ms="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ms.awe.msshowtime.widget.HorizontalProgressbarWithProgress
            android:id="@+id/id_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            ms:progress_reach_color="#ffff0000"
            ms:progress_text_color="#ffff0000"
            ms:progress_unreach_color="#FFDAC8" />

        <com.ms.awe.msshowtime.widget.HorizontalProgressbarWithProgress

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            ms:progress_reach_color="#ffff0000"
            ms:progress_text_color="#ffff0000"
            ms:progress_unreach_color="#FFDAC8" />

        <com.ms.awe.msshowtime.widget.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="100"
            ms:progress_reach_color="#ffff0000"
            ms:progress_text_color="#ffff0000"
            ms:progress_unreach_color="#FFDAC8" />

        <com.ms.awe.msshowtime.widget.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="50"
            ms:progress_text_color="#000000"
            ms:progress_unreach_color="#FFDAC8" />

        <com.ms.awe.msshowtime.widget.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            ms:progress_text_color="#000000"
            ms:progress_unreach_color="#FFDAC8" />


        <com.ms.awe.msshowtime.widget.RoundProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="30"
            ms:radius="30dp"
            ms:progress_text_color="#ff000000"
            ms:progress_unreach_color="#FFDAC8" />

        <com.ms.awe.msshowtime.widget.RoundProgressBarWithProgress
            android:id="@+id/id_progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            ms:radius="60dp"
            ms:progress_text_color="#ff000000"
            ms:progress_unreach_color="#FFDAC8" />
        
    </LinearLayout>
</ScrollView>